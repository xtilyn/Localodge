<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:background="@drawable/rounded_border"
								android:orientation="vertical"
								>

				<Button
												android:id="@+id/popup_user_post_report_post"
												style="@style/Widget.AppCompat.Button.Borderless"
												android:layout_width="match_parent"
												android:layout_height="wrap_content"
												android:text="Report post"
												/>

				<Button
												android:id="@+id/popup_user_post_report_user"
												style="@style/Widget.AppCompat.Button.Borderless"
												android:layout_width="match_parent"
												android:layout_height="wrap_content"
												android:text="Report user"
												/>

				<Button
												android:id="@+id/popup_user_post_block_user"
												style="@style/Widget.AppCompat.Button.Borderless"
												android:layout_width="match_parent"
												android:layout_height="wrap_content"
												android:text="Block user"
												/>

				<Button
												android:id="@+id/popup_user_post_hide"
												style="@style/Widget.AppCompat.Button.Borderless"
												android:layout_width="match_parent"
												android:layout_height="wrap_content"
												android:text="Hide"
												/>

</LinearLayout>