<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:tools="http://schemas.android.com/tools"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:layout_marginStart="12dp"
								android:layout_marginEnd="12dp"
								android:layout_marginTop="8dp"
								>

				<com.mikhaellopez.circularimageview.CircularImageView
												android:id="@+id/comment_profile_pic"
												android:layout_width="50dp"
												android:layout_height="50dp"
												android:src="@mipmap/ic_launcher"
												app:civ_border_color="@color/colorPrimary"
												app:civ_border_width="2dp"
												app:layout_constraintStart_toStartOf="parent"
												app:layout_constraintTop_toTopOf="parent"
												android:layout_marginTop="4dp"
												/>

				<TextView
												android:id="@+id/comment_poster_username"
												fontPath="fonts/Montserrat-SemiBold.ttf"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:layout_marginStart="8dp"
												android:layout_marginTop="4dp"
												android:layout_marginEnd="8dp"
												android:text="asdaslkdjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjsadsdasdasddasdsadsa"
												android:textColor="@color/matteBlack"
												app:layout_constraintEnd_toStartOf="@+id/comment_timestamp"
												app:layout_constraintStart_toEndOf="@id/comment_profile_pic"
												app:layout_constraintTop_toTopOf="@id/comment_profile_pic"
												app:layout_constraintHorizontal_bias="0"
												app:layout_constrainedWidth="true"
												android:ellipsize="end"
												android:lines="1"
												/>

				<TextView
												android:id="@+id/comment_timestamp"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:text="asdasdasdasdasda"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintTop_toTopOf="@id/comment_poster_username"
												android:layout_marginEnd="4dp"
												/>

				<TextView
												android:id="@+id/comment_body"
												android:layout_width="0dp"
												android:layout_height="wrap_content"
												android:layout_marginEnd="8dp"
												android:ellipsize="end"
												android:maxLines="3"
												android:text="sdfdsffdsf"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintStart_toEndOf="@+id/comment_profile_pic"
												android:layout_marginTop="4dp"
												android:layout_marginStart="8dp"
												app:layout_constraintTop_toBottomOf="@+id/comment_poster_username"
												android:visibility="gone"
												/>

				<androidx.cardview.widget.CardView
												android:id="@+id/comment_photo_container"
												android:layout_width="0dp"
												android:layout_height="168dp"
												app:layout_constraintTop_toBottomOf="@id/comment_body"
												app:layout_constraintStart_toEndOf="@id/comment_profile_pic"
												app:layout_constraintEnd_toEndOf="parent"
												android:layout_marginTop="12dp"
												app:cardElevation="0dp"
												app:cardCornerRadius="12dp"
												android:visibility="gone"
												android:clickable="true"
												android:focusable="true"
												android:foreground="?attr/selectableItemBackground"
												>
								<ImageView
																android:id="@+id/comment_photo"
																android:layout_width="match_parent"
																android:layout_height="match_parent"
																tools:ignore="ContentDescription"
																android:scaleType="centerCrop"
																/>
				</androidx.cardview.widget.CardView>

				<TextView
												android:id="@+id/comment_toggle_text"
												android:layout_width="wrap_content"
												android:layout_height="38dp"
												app:layout_constraintTop_toBottomOf="@id/comment_body"
												app:layout_constraintStart_toStartOf="@id/comment_body"
												android:layout_marginTop="4dp"
												android:text="See more"
												android:padding="0dp"
												android:gravity="center_vertical"
												android:textAllCaps="false"
												android:textColor="@android:color/holo_blue_dark"
												fontPath="fonts/Montserrat-Bold.ttf"
												android:clickable="true"
												android:focusable="true"
												android:background="@drawable/circle_ripple"
												android:visibility="gone"
												/>

</androidx.constraintlayout.widget.ConstraintLayout>