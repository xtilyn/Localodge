<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:orientation="vertical"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:background="?attr/selectableItemBackground"
								android:clickable="true"
								android:focusable="true"
								>

				<TextView
												android:id="@+id/rating_title"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:layout_marginStart="8dp"
												android:layout_marginTop="8dp"
												android:text="Rating title"
												android:textAppearance="@style/TextAppearance.AppCompat.Medium"
												app:layout_constraintEnd_toStartOf="@+id/rating_checkbox"
												app:layout_constraintStart_toStartOf="parent"
												app:layout_constrainedWidth="true"
												app:layout_constraintHorizontal_bias="0"
												app:layout_constraintTop_toTopOf="parent"
												android:textColor="@color/matteBlack"
												/>

				<TextView
												android:id="@+id/rating_desc"
												android:layout_width="0dp"
												android:layout_height="wrap_content"
												android:layout_marginTop="4dp"
												android:layout_marginBottom="8dp"
												android:text="Rating desc"
												app:layout_constraintBottom_toBottomOf="parent"
												app:layout_constraintEnd_toStartOf="@+id/rating_checkbox"
												app:layout_constraintStart_toStartOf="@id/rating_title"
												app:layout_constraintTop_toBottomOf="@id/rating_title"
												android:layout_marginEnd="8dp"
												/>

				<CheckBox
												android:id="@+id/rating_checkbox"
												android:layout_width="50dp"
												android:layout_height="50dp"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintTop_toTopOf="parent"
												app:layout_constraintBottom_toBottomOf="parent"
												android:gravity="center"
												/>

				<View
												android:layout_width="0dp"
												android:layout_height="2dp"
												android:background="#e9e9e9"
												app:layout_constraintStart_toStartOf="parent"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintTop_toBottomOf="@id/rating_desc"
												android:layout_marginStart="12dp"
												android:layout_marginEnd="12dp"
												android:layout_marginTop="12dp"
												/>

</androidx.constraintlayout.widget.ConstraintLayout>